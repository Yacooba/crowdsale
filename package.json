{
  "name": "crowdsale",
  "version": "0.0.1",
  "author": "Yacooba",
  "license": "MIT",
  "description": "Yacooba private crowdsale contracts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yacooba/crowdsale.git"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": [
    "yacooba",
    "events",
    "crowdsale",
    "ethereum",
    "ICO",
    "YAC"
  ],
  "bugs": {
    "url": "https://github.com/Yacooba/crowdsale/issues"
  },
  "scripts": {
    "compile": "hardhat compile",
    "sizer": "hardhat size-contracts",
    "format": "prettier . --write",
    "lint": "npm run lint:sol && npm run lint:ts",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ext .js,.ts .",
    "coverage": "hardhat coverage",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=1 npm run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.0.0",
    "@typechain/ethers-v5": "^6.0.5",
    "@typechain/hardhat": "^1.0.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "hardhat": "^2.1.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache",
    "*.sol": "solhint",
    "*.{js,ts,sol,md,json}": "prettier --write"
  }
}
